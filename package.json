{
  "name": "rsbuild-plugin-devtools-json",
  "version": "0.2.5",
  "repository": "https://github.com/rstackjs/rsbuild-plugin-devtools-json",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rslib build",
    "bump": "npx bumpp",
    "dev": "rslib build --watch",
    "format": "biome format --write",
    "lint": "biome check",
    "lint:write": "biome check . --write",
    "prepare": "simple-git-hooks && npm run build"
  },
  "simple-git-hooks": {
    "pre-commit": "npx nano-staged"
  },
  "nano-staged": {
    "*.{js,jsx,ts,tsx,mjs,cjs}": [
      "biome check --write --no-errors-on-unmatched"
    ]
  },
  "dependencies": {
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.2",
    "@rslib/core": "0.12.4",
    "@types/node": "24.3.1",
    "nano-staged": "^0.8.0",
    "simple-git-hooks": "^2.13.1",
    "typescript": "5.9.2"
  },
  "peerDependencies": {
    "@rsbuild/core": "1.x"
  },
  "peerDependenciesMeta": {
    "@rsbuild/core": {
      "optional": true
    }
  },
  "packageManager": "pnpm@9.15.9"
}
